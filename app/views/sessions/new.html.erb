<div id="page-content"> 
    <h1 class="text-center mt-4">Login</h1>
    <div class="container">
  
    <div class="">
        <%= form_with scope: :sessions, url:login_path, class:"shadow p-3 mb-3 bg-primary rounded", local: true do |f|%>
       

            <div class="form-group row">    
                <%= f.label :email,class:"col-2 col-form-label text-light"%>
                <div class="col-10">
                    <%= f.text_area :email, class:"form-control", placeholder:"Email"%> 
                </div>   
            </div>  

            <div class="form-group row">    
                <%= f.label :password,class:"col-2 col-form-label text-light"%>
                <div class="col-10">
                    <%= f.password_field :password, class:"form-control", placeholder:"Password"%> 
                </div>   
            </div>  

            <div class="row justify-content-center">
                <%= f.submit 'Login',class:"btn btn-outline-light btn-warning" %>
            </div> 
        <%end%>
    </div>  
</div>
</div>