<div id="page-content"> 
    <h1 class="text-center mt-4">List User</h1>
    <div class="container">
        <% @user.each do |user| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-1">
                <div class="card text-center border-success mb-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <div class="card-header"> 
                       <%= link_to user.username, user_path(user)%>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                        <%= link_to gravatar_for(user) %></h5>
                        <%= link_to "Show Profile", user_path(user), class:"btn btn-outline-primary"%>
                        <%= link_to "Destroy User", users_path(user), class:"btn btn-outline-danger", method: :delete, data:{confirm: "Are you Sure?"}%>
                    </div>
                    <h4>
                    Article of user:
                    <%= user.articles.count %>
                    </h4>
                    <div class="card-footer text-muted">
                      <small>
                       Created
                       <%= time_ago_in_words(user.created_at)%> Ago ,
                       Edited
                       <%= time_ago_in_words(user.updated_at)%> Ago
                    </small>
                    </div>
                </div>
            </div>
        </div>
        <%end%>
    </div> 
</div>