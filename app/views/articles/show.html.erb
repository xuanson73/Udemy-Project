<div id="page-content">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-5">
                <div class="card text-center border-success mb-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <div class="card-header"> 
                      by  <%= @article.user.username if  @article.user %>
                      <%= link_to gravatar_for(@article.user), user_path(@article.user)%>
                    </div>
                    <div class="card-body">
                        <h4 class="text-center mt-5"><%= @article.title%></h4>
                        <h4 class="text-center mt-5"><%= @article.description%></h4>
                        <% if logged_in? && article.user == current_user %>
                            <%= link_to "Edit", edit_article_path(@article), class:"btn btn-outline-success"%>
                            <%= link_to "Destroy", article_path(@article), class:"btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"}%>
                        <% end %>
                    </div>
                    <div class="card-footer text-muted">
                      <small>
                       Created
                       <%= time_ago_in_words(@article.created_at)%> Ago ,
                       Edited
                       <%= time_ago_in_words(@article.updated_at)%> Ago
                    </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="center">
        <%= link_to 'Home page', root_path, class:"btn btn-link"%>
        <br><%= link_to 'Creat a new article', new_article_path, class:"btn btn-link"%>
    <div>
</div>