<div id="page-content">
    <h1 class="text-center mt-5">Listing all Article</h1>
    <div class="container">
        <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-1">
                <div class="card text-center border-success mb-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <div class="card-header"> 
                       by <%= article.user.username  if article.user%>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title, articles_path(article) %></h5>
                        <p class="card-text"><%= article.description%></p>
                        <%= link_to "Show", article_path(article), class:"btn btn-outline-primary"%>
                        <%= link_to "Edit", edit_article_path(article), class:"btn btn-outline-success"%>
                        <%= link_to "Destroy", article_path(article), class:"btn btn-outline-danger", method: :delete, data:{confirm: "Are you Sure?"}%>
                    </div>
                    <div class="card-footer text-muted">
                      <small>
                       Created
                       <%= time_ago_in_words(article.created_at)%> Ago ,
                       Edited
                       <%= time_ago_in_words(article.updated_at)%> Ago
                    </small>
                    </div>
                </div>
            </div>
        </div>
        <%end%>
    </div>
    <%= link_to 'Home page', root_path%>
    <br><%= link_to 'Creat a new article', new_article_path%>
</div>